# Environment configuration for MCP Toolbox for Databases
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/test_case_db
CLOUD_SQL_INSTANCE=your-project:region:instance-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=test_case_db

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_LOG_LEVEL=INFO

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
SESSION_TIMEOUT=3600

# Optional: Redis for caching (if using Redis alongside PostgreSQL)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0